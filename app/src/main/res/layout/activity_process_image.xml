<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="ukalwa.moledetection.ProcessImage" >

    <ViewFlipper
        android:id="@+id/view_flipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:ignore="UselessParent,ExtraText" >

            <ImageView
                android:id="@+id/image1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/ImageTitleText1"
                android:contentDescription="Image"
                tools:ignore="HardcodedText" />

            <TextView
                style="@style/ImageTitle"
                android:id="@+id/ImageTitleText1"
                tools:ignore="HardcodedText"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:ignore="UselessParent,ExtraText" >

            <ImageView
                android:id="@+id/image2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/ImageTitleText2"
                android:contentDescription="Image"
                tools:ignore="HardcodedText" />

            <TextView
                style="@style/ImageTitle"
                android:id="@+id/ImageTitleText2"
                tools:ignore="HardcodedText"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:ignore="UselessParent,ExtraText" >

            <ImageView
                android:id="@+id/image3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/ImageTitleText3"
                android:contentDescription="Image"
                tools:ignore="HardcodedText" />

            <TextView
                style="@style/ImageTitle"
                android:id="@+id/ImageTitleText3"
                tools:ignore="HardcodedText"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:ignore="UselessParent,ExtraText" >

            <ImageView
                android:id="@+id/image4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/ImageTitleText4"
                android:contentDescription="Image"
                tools:ignore="HardcodedText" />

            <TextView
                style="@style/ImageTitle"
                android:id="@+id/ImageTitleText4"
                tools:ignore="HardcodedText"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/layout5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:ignore="UselessParent,ExtraText" >

            <ImageView
                android:id="@+id/color_image1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:contentDescription="Image"
                android:layout_below="@+id/color_image2"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/color_image2"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:contentDescription="Image"
                android:layout_below="@+id/textViewColor"
                tools:ignore="HardcodedText" />


            <TextView
                android:id="@+id/textViewColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/abc_dropdownitem_icon_width"
                tools:ignore="HardcodedText" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/resultLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:ignore="UselessParent,ExtraText" >

            <TextView
                style="@style/ImageTitle"
                android:id="@+id/ResultTitle"
                tools:ignore="HardcodedText"/>

            <ImageView
                android:id="@+id/result_image"
                android:layout_width="fill_parent"
                android:layout_height="240dp"
                android:layout_marginTop="20dp"
                android:contentDescription="Image"
                android:layout_below="@+id/ResultTitle"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/resultView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/result_image"
                android:textAlignment="center"
                tools:ignore="HardcodedText"
                android:textSize="15sp"/>
        </RelativeLayout>

    </ViewFlipper>

    <Button
        android:id="@+id/nextbutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/right"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/previousbutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/left"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />
</RelativeLayout>
